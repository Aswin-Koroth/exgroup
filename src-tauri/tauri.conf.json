{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "exgroup",
  "version": "1.0.0",
  "identifier": "com.exgroup.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "ExGroup v1.0.0",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$DOWNLOAD/**",
          "$PICTURE/**",
          "$DOCUMENT/**",
          "$DESKTOP/**",
          "$APPDATA/**",
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
